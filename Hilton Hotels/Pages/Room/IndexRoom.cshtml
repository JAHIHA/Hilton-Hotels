@page
@model Hilton_Hotels.Pages.Room.IndexRoomModel
@{
}
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>TYPE</th>
                <th>PRICE</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.RoomModels.Count == 0)
            {
                <p>Empty list</p>
            }
            else
            {
                @foreach (var p in Model.RoomModels)
                {



                    <tr>
                        <td>@p.ID</td>
                        <td>@p.Type</td>
                        <td>@p.Price</td>
                        <td><a asp-page="DeleteRoom" asp-route-id="@p.ID">Delete</a></td>
                        <td><a asp-page="UpdateRoom" asp-route-id="@p.ID">Update</a></td>
                    </tr>
                }
            }



        </tbody>
    </table>


</div>